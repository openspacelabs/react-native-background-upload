{
  "compilerOptions": {
    "outDir": "lib",
    "baseUrl": "src",
    "paths": {
      "openspacelabs/react-native-background-upload": ["./src/index"]
    },
    "declaration": true,
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "exclude": [
    "example",
    "lib"
  ]
}
